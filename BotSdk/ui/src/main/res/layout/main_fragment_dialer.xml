<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".audiocodes.webrtcclient.activities.MainActivity">

        <LinearLayout
            android:id="@+id/dialer_layout_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dialer_layout_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dialer_button_keypad_fake"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/dialpad_button_back_icon_xml"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dialer_editText_call_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:textSize="26sp"
                    tools:ignore="TextFields" />

                <ImageView
                    android:id="@+id/dialer_button_keypad_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/dialpad_button_back_icon_xml" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialer_layout_pad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dialer_layout_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_1"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textSize="20sp"
                        custom:Text="1" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_2"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="2\nABC" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_3"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="3\nDEF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialer_layout_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_4"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="4\nGHI" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_5"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="5\nJKL" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_6"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="6\nMNO" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialer_layout_row_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_7"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="7\nPQRS" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_8"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="8\nTUV" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_9"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="9\nWXYZ" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialer_layout_row_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_asterisk"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="*" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_0"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="0\n+" />

                    <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                        android:id="@+id/dialer_button_keypad_hash"
                        style="@style/DialerKeypadButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        custom:Text="#" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialer_layout_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                    android:id="@+id/dialer_button_call"
                    style="@style/DialerCallButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    custom:Text="@string/dialer_button_call_text" />

                <com.kore.ui.audiocodes.webrtcclient.structure.ImageViewWithText
                    android:id="@+id/dialer_button_video_call"
                    style="@style/DialerCallButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    custom:Text="@string/dialer_button_video_call_text" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>