<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kore.ai.widgetsdk.activities.FeedBackillustrationActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:srcCompat="@drawable/rating_illustration" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/latomedium"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:textColor="@color/color_161620"
            android:textSize="13sp" />

        <include
            layout="@layout/imojis_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_view" />
    </LinearLayout>
</LinearLayout>