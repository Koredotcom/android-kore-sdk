<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp"
    android:gravity="center|start"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/checkBox_btn"
            android:fontFamily="@font/latoregular"
            android:textColor="#000000"
            android:textSize="15sp" />


        <CheckBox
            android:id="@+id/checkBox_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:button="@drawable/checkbox_drawable">

        </CheckBox>

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_freetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_rect_feedback_edt"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxHeight="150dp"
        android:textColorHint="#e0e1e9"
        android:minHeight="100dp"
        android:padding="10dp"
        android:scrollbarStyle="insideInset"
        android:textSize="15sp"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        android:visibility="gone" />

  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/tv_question"
        android:layout_marginTop="5dp"
        android:background="#e0e1e9" />-->
</LinearLayout>