<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/left_bubble_selected" />
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- White Top color -->
    <item android:left="2dp" android:right="2dp" android:bottom="2dp" android:top="2dp">

        <shape  android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/left_bubble_unselected" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />


        </shape>

    </item>


</layer-list>