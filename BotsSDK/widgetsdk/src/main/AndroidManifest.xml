            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarThemeWhiteSub"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.kore.ai.widgetsdk.activities.GenericWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBarThemeWhiteSub"
            android:windowSoftInputMode="stateHidden" />
