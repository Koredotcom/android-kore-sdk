<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_pressed="false" android:state_selected="true">
        <shape>
            <stroke android:width="3dp" android:color="#e5f5f6"></stroke>
            <solid android:color="#e5f5f6" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>