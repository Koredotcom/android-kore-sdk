<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llChildLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:visibility="invisible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvColumnName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:textColor="@color/colorSelected"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tvValue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_7dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrowView"
            android:layout_width="@dimen/dimen_7dp"
            android:layout_height="@dimen/dimen_7dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_arrow_table_resp_down"
            android:importantForAccessibility="no" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivChildArrowDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorSelected"
        android:importantForAccessibility="no" />

</LinearLayout>