<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">

    <TextView
        android:id="@+id/tv_widget_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_theme" />

    <Spinner
        android:id="@+id/spWidgetThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_widget_name"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/compose_bar_new_background"
        android:padding="5dp" />

    <ListView
        android:id="@+id/lvThemeProperties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spWidgetThemes"
        android:layout_above="@+id/tvThemeSave"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvThemeSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>