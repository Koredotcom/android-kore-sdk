<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/right_bubble_unselected"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20dp">

        <TextView
            android:id="@+id/tvAgentCardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hi_shan_i_am_here_to_answer_n_your_questions_about_credit_card"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="@dimen/table_layout_height"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@color/footerdivider_color" />

        <LinearLayout
            android:id="@+id/llAgentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAgentImage"
                android:layout_width="@dimen/agent_image_size"
                android:layout_height="@dimen/agent_image_size"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:importantForAccessibility="no" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAgentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kevin_peterson"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_sub_header"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAgentRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kevin_peterson"
                    android:textColor="@color/footerdivider_color"
                    android:textSize="@dimen/dimen_12dp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAgentButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>