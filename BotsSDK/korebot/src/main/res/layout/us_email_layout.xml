<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f6f6f8"
        android:padding="7dp">

        <TextView
            android:id="@+id/icon_view"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/icon_e915"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/root_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@+id/count_view"
            android:layout_toEndOf="@+id/icon_view"
            android:gravity="center|start"
            android:letterSpacing="0.04"
            android:textAllCaps="true"
            android:textColor="@color/color_626281"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:drawableEnd="@drawable/right_arrow_iconn"
            android:drawablePadding="8dp"
            android:textSize="13sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/date_view"
            android:ellipsize="end"
            android:fontFamily="@font/latoregular"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@color/color_485260"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/latoregular"
            android:textColor="#a3b0be"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignBaseline="@+id/image"
            android:layout_alignStart="@+id/title"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_485260"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_attachment_doc"
            />

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/from"
            android:layout_alignStart="@+id/title"
            android:layout_alignEnd="@+id/date_view"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/latoregular"
            android:maxLines="1"

            android:textColor="#465360"
            android:textSize="15sp" />


    </RelativeLayout>
</LinearLayout>