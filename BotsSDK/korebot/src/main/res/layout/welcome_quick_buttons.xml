<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quick_reply_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal"
    android:paddingStart="0dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:id="@+id/quick_reply_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_rect_feedback"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/quick_reply_item_image"
            android:layout_width="@dimen/quick_reply_image_width"
            android:layout_height="@dimen/quick_reply_image_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_rect_image"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/quick_reply_item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/hello"
            android:textColor="@color/color_465360"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>