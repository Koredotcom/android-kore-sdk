<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_reply_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal"

    android:paddingStart="0dp"
    android:paddingEnd="10dp"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/quick_reply_textbackground"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"

        android:id="@+id/quick_reply_view"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/quick_reply_item_image"
            android:layout_width="@dimen/quick_reply_image_width"
            android:layout_height="@dimen/quick_reply_image_height"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_rect_image"
            android:layout_marginEnd="5dp"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/quick_reply_item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/color_465360"
            android:ellipsize="end"
            android:text="@string/hello"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>