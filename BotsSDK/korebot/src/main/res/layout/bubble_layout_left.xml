<?xml version="1.0" encoding="utf-8"?>
<kore.botssdk.view.ReceivedBubbleContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/received_bubble_layout_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="false">

    <kore.botssdk.view.ReceivedBubbleLayout
        android:id="@+id/receivedBubbleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#0000FF00">

        <!-- Sender Image -->
        <kore.botssdk.view.CircularProfileView
            android:id="@+id/cpvSenderImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true" />

        <kore.botssdk.view.HeaderLayout
            android:id="@+id/headerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </kore.botssdk.view.ReceivedBubbleLayout>

</kore.botssdk.view.ReceivedBubbleContainer>