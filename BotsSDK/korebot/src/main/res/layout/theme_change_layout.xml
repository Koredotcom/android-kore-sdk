<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rect_feedback"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTheme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="@string/logo_theme" />

    <View
        android:id="@+id/vTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSelected" />

    <TextView
        android:id="@+id/tvTheme2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="@string/shopping_theme" />

</LinearLayout>