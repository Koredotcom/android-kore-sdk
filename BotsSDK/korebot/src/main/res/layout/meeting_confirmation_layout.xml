<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slot_confirm_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/shadow_layer_background"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:padding="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:fontFamily="@font/latoregular"
            android:maxLines="1"
            android:text=""
            android:textColor="#485260"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"

            android:ellipsize="end"
            android:gravity="start|top"
            android:maxLines="1"
            android:text="@string/selected_slots"
            android:textColor="#757587"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/ic_baseline_watch_later_24px" />

        <TextView
            android:id="@+id/time_slots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/color_404051"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="5dp"
            android:gravity="center|start"
            android:textColor="#485260"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/vector_location_icon" />


        <TextView
            android:id="@+id/tv_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center|start"
            android:textColor="#485260"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/vector_person" />
    </LinearLayout>
</LinearLayout>