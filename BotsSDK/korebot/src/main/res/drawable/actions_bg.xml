<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- "shadow" -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_hint_composer" />
            <corners android:radius="@dimen/dimen_7dp" />
        </shape>
    </item>


    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_tab_pressed" />
            <corners
                android:topLeftRadius="@dimen/dimen_7dp"
                android:topRightRadius="@dimen/dimen_7dp" />
        </shape>
    </item>

</layer-list>