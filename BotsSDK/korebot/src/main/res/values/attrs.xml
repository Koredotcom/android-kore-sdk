<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularProfileView">
        <attr name="badge_padding" format="dimension" />
        <attr name="text_size" format="dimension"/>
        <attr name="font_style" format="enum">
            <enum name="roboto_light" value="0" />
            <enum name="roboto_light_italics" value="1" />
            <enum name="roboto_regular" value="2" />
            <enum name="roboto_regular_italics" value="3" />
            <enum name="roboto_medium" value="4" />
            <enum name="roboto_medium_italics" value="5" />
            <enum name="roboto_bold" value="6" />
            <enum name="roboto_bold_italics" value="7" />
        </attr>
        <attr name="profile_drawable_padding" format="dimension"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="has_border" format="boolean"/>
        <attr name="publish_events" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WaitingDots">
        <attr name="dotsColor" format="color" />
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoplay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer"/>
        <attr name="rv_rippleDuration" format="integer"/>
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />

    </declare-styleable>

    <attr name="tableView_columnCount" format="integer"/>
    <attr name="tableView_headerElevation" format="integer"/>

    <declare-styleable name="TableResponsiveView">
        <attr name="tableView_columnCount"/>
        <attr name="tableView_headerElevation"/>
        <attr name="tableView_headerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TableView">
        <attr name="tableView_columnCount"/>
        <attr name="tableView_headerElevation"/>
    </declare-styleable>

</resources>